{% extends "base.twig" %}

{% block content %}
    <article class="box-page" id="post-{{ post.ID }}">
        <section class="box-content">

            <h1>{{ post.title }}</h1>

            <div class="article-view-meta">
                <strong>
                    {{ post.post_date|date("d.m.Y") }}
                    {% if post.place != '' %}
                        - {{ post.place }}
                    {% endif %}
                </strong> - <a href="{{ post.author.get_link }}">{{ post.author.name }}</a>
            </div>

            {% if post.get_thumbnail %}
                <figure>
                    <img src="{{ post.thumbnail.src }}" class="img-responsive" alt="{{ post.title }}"/>
                    <figcaption>
                        {% if language.language_code == 'de' %}
                            {{ post.thumbnail.caption_de }}
                        {% elseif language.language_code == 'es' %}
                            {{ post.thumbnail.caption_es }}
                        {% elseif language.language_code == 'fr' %}
                            {{ post.thumbnail.caption_fr }}
                        {% elseif language.language_code == 'it' %}
                            {{ post.thumbnail.caption_it }}
                        {% elseif language.language_code == 'pt' %}
                            {{ post.thumbnail.caption_pt }}
                        {% else %}
                            {{ post.thumbnail.caption }}
                        {% endif %}

                        {% if post.thumbnail.credits_pod != '' %}
                            ({{ __('Image by', 'pressenza') }} {{ post.thumbnail.credits_pod }})
                        {% endif %}
                    </figcaption>
                </figure>
            {% endif %}

            <div class="article-view-content">
                {{ post.content }}

                {% if post.original_article_url != '' %}
                    <div style="font-size:15px; margin-top:15px;">
                        <p><a href="{{ post.original_article_url }}" target="_blank"><span class="glyphicon glyphicon-globe" style="font-size:11px;"></span> {{ __('The original article can be found on our partner\'s website here', 'pressenza') }}</a></p>
                    </div>
                {% endif %}

                <div class="article-view-meta-bottom">{{ __('Categories', 'pressenza') }}: {{ postcats }}<br>{{ posttags }}</div>
            </div>

        </section>
    </article>

    <div class="box">
        <h2>{{ __('About The Author', 'pressenza') }}</h2>

        <div class="box-content">
            <div class="row">
                <div class="col-sm-2 col-xs-4">
                    {% if post.author.photo %}
                        <img src="{{ TimberImage(post.author.photo)|resize(70) }}" alt="{{ post.author.name }}" title="{{ post.author.name }}"/>
                    {% else %}
                        {{ authoravatar }}
                    {% endif %}
                </div>
                <div class="col-sm-10 col-xs-8">
                    <p><strong><a href="{{ post.author.link }}" rel="author">{{ post.author.name }}</a></strong><br/>
                        {% if language.language_code == 'de' %}
                            {% if post.get_author.bio_de != '' %}
                                {{ post.get_author.bio_de }}
                            {% else %}
                                {{ post.get_author.description }}
                            {% endif %}
                        {% elseif language.language_code == 'es' %}
                            {% if post.get_author.bio_es != '' %}
                                {{ post.get_author.bio_es }}
                            {% else %}
                                {{ post.get_author.description }}
                            {% endif %}
                        {% elseif language.language_code == 'fr' %}
                            {% if post.get_author.bio_fr != '' %}
                                {{ post.get_author.bio_fr }}
                            {% else %}
                                {{ post.get_author.description }}
                            {% endif %}
                        {% elseif language.language_code == 'it' %}
                            {% if post.get_author.bio_it != '' %}
                                {{ post.get_author.bio_it }}
                            {% else %}
                                {{ post.get_author.description }}
                            {% endif %}
                        {% elseif language.language_code == 'pt' %}
                            {% if post.get_author.bio_pt != '' %}
                                {{ post.get_author.bio_pt }}
                            {% else %}
                                {{ post.get_author.description }}
                            {% endif %}
                        {% else %}
                            {{ post.get_author.description }}
                        {% endif %}
                    </p>

                    <div class="author_info">
                        <div class="pull-left">{{ __('Number of Entries', 'pressenza') }} : {{ authorposts }}</div>
                        <div class="pull-right">
                            {% if post.get_author.facebook %}
                                <a href="{{ post.get_author.facebook }}"><img src="/wp-content/themes/pressenza/images/icons/facebook.png" alt="Facebook"></a> &nbsp;
                            {% endif %}
                            {% if post.get_author.twitter %}
                                <a href="http://twitter.com/{{ post.get_author.twitter }}"><img src="/wp-content/themes/pressenza/images/icons/twitter.png" alt="Twitter"></a>
                            {% endif %}
                        </div>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}